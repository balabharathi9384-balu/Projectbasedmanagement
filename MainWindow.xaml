<Window x:Class="multilanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:multilanguage"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Background="White" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>


        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>

        </Grid.RowDefinitions>
        <Border Background="#B9C7E3" CornerRadius="7" Padding="20" Margin="30">
            <StackPanel>
                <TextBlock Text="Login" Grid.Row="0" Grid.Column="3" FontSize="20"  HorizontalAlignment="Center"></TextBlock>


                <!--<TextBlock Text="Select your Language:" Grid.Row="1" Grid.Column="0"></TextBlock>

                <ComboBox x:Name="cmblanguage" Grid.Column="1" Grid.Row="1" Width="120" Height="30" SelectionChanged="cmblanguage_SelectionChanged">
                    <ComboBoxItem Content="English"></ComboBoxItem>
                    <ComboBoxItem Content="Tamil"></ComboBoxItem>
                    <ComboBoxItem Content="Hindi"></ComboBoxItem>
                    <ComboBoxItem Content="Chi"></ComboBoxItem>
                </ComboBox>-->
                <TextBlock Text="Username:" FontWeight="ExtraBold" Grid.Row="1" Grid.Column="0"></TextBlock>
                <TextBox Height="30"></TextBox>

                <TextBlock Text="Password:" Grid.Row="2" Grid.Column="0" FontWeight="Bold" ></TextBlock>
                <PasswordBox  Height="30"></PasswordBox>
                <Button Content="Login" Background="#227BC5" Margin="10,10,0,0" Grid.Column="1" Grid.Row="11" Width="100" x:Name="btnlogin"  Click="btnlogin_Click"  HorizontalAlignment="Center"></Button>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Don't have an account?" FontWeight="Bold" Foreground="#01010B" Margin="12,10,0,0"></TextBlock>
                    <Button Content="Register" x:Name="btnreg" Click="btnreg_Click"  Background="#52EC86" Margin="12,10,0,0" Foreground="#01010B"></Button>
                </StackPanel>

            </StackPanel>
        </Border>
        
        


    </Grid>

</Window>
