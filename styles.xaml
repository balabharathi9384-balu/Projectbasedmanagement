<Window x:Class="multilanguage.styles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:multilanguage"
        mc:Ignorable="d"
        Title="styles" Height="450" Width="800">
    <Window.Resources>

      


    </Window.Resources>
    <Grid>
        
        <!--Card container-->
        <Border Background="Gray" CornerRadius="10"
                Width="250" Height="420"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Padding="20">
            <Grid>
                <!--Login Panel-->
                <StackPanel x:Name="LoginPanel">
                    <TextBlock Text="Welcome back *" FontSize="24"></TextBlock>
                    
                    <!--Username-->
                    <TextBlock Text="Username :" FontWeight="Bold" Foreground="Black">
                       
                    </TextBlock>
                    <TextBox Margin="0,5,0,15" Height="35"
                             Padding="10"
                             BorderBrush="Black"
                             BorderThickness="1"
                             Background="White">
                        
                    </TextBox>
                    <!--Password-->
                    <TextBlock Text="Password :" Foreground="Black" FontWeight="Bold">
                        
                    </TextBlock>
                    <PasswordBox Margin="10,5,0,15" Height="35"
                             Padding="45"
                             BorderBrush="Black"
                             BorderThickness="1"
                             Foreground="Black"
                             Background="White">

                    </PasswordBox>
                    
                    <!--Login Button-->
                    <Button  Content="Login" 
                             Width="130" Height="38"
                             HorizontalAlignment="Center"
                             Margin="10,10,0,10">
                    </Button>
                    <Button Content="Register" Margin="10,10,0,10"></Button>
                    <!--Swith to Register-->
                    <TextBlock HorizontalAlignment="Center">
                        <Run Text="Don't have an account?"></Run>
                        <Run Text="Register" Foreground="Black"></Run>
                    </TextBlock>
               
                </StackPanel>

                <!--REGISTRATION PANEL-->
                <StackPanel x:Name="Registerpanel" Visibility="Collapsed">
                    <TextBlock Text="Create Account :*"
                               FontSize="22"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20">
                        
                    </TextBlock>
                                                   
                </StackPanel>
                            


            </Grid>
        </Border>
        
    </Grid>
</Window>
