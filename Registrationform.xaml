        <Border Background="#B0B9BA" CornerRadius="15" Padding="20" Margin="30">
            <StackPanel>
                <TextBlock Text="Register" Grid.Row="0" Grid.Column="3" FontSize="20" HorizontalAlignment="Center"></TextBlock>
                
                <!--Full Name-->
                <TextBlock Text="Full Name" Margin="0,0,0,5"></TextBlock>
                <TextBox Height="30"></TextBox>
                <!--Email-->
                <TextBlock Text="Email" Margin="0,0,0,5"></TextBlock>
                <TextBox Height="30"></TextBox>
                <!--Password-->
                <TextBlock Text="Password" Margin="0,0,0,5"></TextBlock>
                <PasswordBox Height="30"></PasswordBox>
                <!--Confirm Password-->
                <TextBlock Text="Cofirm Password" Margin="0,0,0,5"></TextBlock>
                <PasswordBox Height="30"></PasswordBox>
                <!--Gender-->
                <TextBlock Text="Gender" Margin="0,0,0,5"></TextBlock>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <RadioButton Content="Male"></RadioButton>
                    <RadioButton Content="Female"></RadioButton>
                    <RadioButton Content="Other"></RadioButton>
                </StackPanel>
                <!--Date of Birth-->
                <TextBlock Text="Date of Birth" Margin="0,0,0,5"></TextBlock>
                <DatePicker Height="30" SelectedDate="09-21-2026"></DatePicker>
                <!--Country (ComboBox)-->
                <TextBlock Text="Country" Margin="0,0,0,5"></TextBlock>
                <ComboBox Height="30">
                    <ComboBoxItem Content="India"></ComboBoxItem>
                    <ComboBoxItem Content="America"></ComboBoxItem>
                    <ComboBoxItem Content="China"></ComboBoxItem>
                    <ComboBoxItem Content="Pakistan"></ComboBoxItem>
                </ComboBox>
                <!--Interests-->
                <TextBlock Text="Interests" Margin="0,0,0,5"></TextBlock>
                <ListBox Height="30">
                    <ListBoxItem Content="Sports"></ListBoxItem>
                    <ListBoxItem Content="Music"></ListBoxItem>
                    <ListBoxItem Content="Reading Books"></ListBoxItem>
                    <ListBoxItem Content="Drawing"></ListBoxItem>
                    <ListBoxItem Content="Dancing"></ListBoxItem>
                </ListBox>
                <!--Terms & Conditions (Check Box)-->
                <CheckBox Content="I accept the all Terms Conditions"></CheckBox>
                <!--Register Button-->
                <Button Content="Register" Background="#204C88" x:Name="btnregister" Margin="10" Click="btnregister_Click"></Button>
                <!--Login link-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" >
                    <TextBlock Text="Already have an account?"></TextBlock>
                    <Button Content="login" Name="btnlogin" Padding="5"  Click="btnlogin_Click" ></Button>
                </StackPanel>




            </StackPanel>
        </Border>





    </Grid>
